generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id         String    @id @default(cuid())
  slug       String    @unique
  targetUrl  String    @map("target_url")
  title      String?   // 自訂標題/名稱
  tag        String?   // 分組/標籤
  expiresAt  DateTime? @map("expires_at") // 到期日
  clickLimit Int?      @map("click_limit") // 點擊上限
  lastClickAt DateTime? @map("last_click_at") // 最近一次點擊時間
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  
  clicks Click[]
  
  @@map("links")
}

model Click {
  id        String   @id @default(cuid())
  linkId    String   @map("link_id")
  timestamp DateTime @default(now())
  referrer  String?
  userAgent String   @map("user_agent")
  country   String?
  city      String?
  device    String?
  
  link Link @relation(fields: [linkId], references: [id], onDelete: Cascade)
  
  @@map("clicks")
}

model Setting {
  id                    String  @id @default(cuid())
  logoUrl               String? @map("logo_url") // Logo URL
  defaultQrStyle        String  @default("square") @map("default_qr_style") // square, rounded, dots
  custom404Title        String  @default("404") @map("custom_404_title")
  custom404Description  String  @default("您尋找的短連結不存在或可能已被移除。") @map("custom_404_description")
  custom404ButtonText   String  @default("返回首頁") @map("custom_404_button_text")
  custom404ButtonUrl    String  @default("/") @map("custom_404_button_url")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")
  
  @@map("settings")
}
